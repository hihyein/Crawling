<div class="container">
  <h1 class="text-center mt-5">산학관 학생식당 식단표</h1>

  <a href="get_bob" style="float:right"><button type="button" class="btn btn-primary">식단표 가져오기</button></a>
  <% if @mon %>
    <h2>기간: <%= @mon.date %>~<%= @sat.date %></h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>중식A</th>
          <th>중식B</th>
          <th>석식</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">월(<%= @mon.date %>)</th>
          <td><%= @mon.lunch_a %></td>
          <td><%= @mon.lunch_b %></td>
          <td><%= @mon.dinner %></td>
        </tr>
        <tr>
          <th scope="row">화(<%= @tue.date %>)</th>
          <td><%= @tue.lunch_a %></td>
          <td><%= @tue.lunch_b %></td>
          <td><%= @tue.dinner %></td>
        </tr>
        <tr>
          <th scope="row">수(<%= @wed.date %>)</th>
          <td><%= @wed.lunch_a %></td>
          <td><%= @wed.lunch_b %></td>
          <td><%= @wed.dinner %></td>
        </tr>
        <tr>
          <th scope="row">목(<%= @thu.date %>)</th>
          <td><%= @thu.lunch_a %></td>
          <td><%= @thu.lunch_b %></td>
          <td><%= @thu.dinner %></td>
        </tr>
        <tr>
          <th scope="row">금(<%= @fri.date %>)</th>
          <td><%= @fri.lunch_a %></td>
          <td><%= @fri.lunch_b %></td>
          <td><%= @fri.dinner %></td>
        </tr>
        <tr>
          <th scope="row">토(<%= @sat.date %>)</th>
          <td><%= @sat.lunch_a %></td>
          <td>없음</td>
          <td>없음</td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
